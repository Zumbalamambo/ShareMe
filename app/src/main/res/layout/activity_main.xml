<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.leaves.app.shareme.MainActivity">
    <ImageView
            android:id="@+id/iv_bg"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    <com.fivehundredpx.android.blur.BlurringView
            android:id="@+id/blur_toolbar"
            tools:visibility="gone"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="ShareMe"
            app:titleTextColor="@color/colorAccent"
            android:layout_marginTop="@dimen/status_bar_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <include
            layout="@layout/layout_content"
            android:layout_margin="@dimen/spacing_more_small"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/card_dialpad"
            android:layout_below="@id/toolbar"/>
    <android.support.v7.widget.CardView
            android:id="@+id/card_dialpad"
            app:cardCornerRadius="10dp"
            app:contentPaddingBottom="10dp"
            android:layout_marginBottom="-10dp"
            android:layout_marginTop="@dimen/spacing_more_small"
            android:layout_marginLeft="@dimen/spacing_more_small"
            android:layout_marginRight="@dimen/spacing_more_small"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.leaves.app.shareme.widget.dialpad.NineKeyDialpad
                android:id="@+id/dialpad"
                app:tint_color="@color/colorPrimary"
                app:tint_color2="@color/colorAccent"
                app:divider_color="#79ffffff"
                app:colorful="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>
