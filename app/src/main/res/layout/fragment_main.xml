<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height_normal"/>
        <TextView
            android:id="@+id/tv_title"
            android:text="@string/title_share"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_key"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_hint"
                android:text="@string/hint_password"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <com.leaves.app.shareme.ui.widget.PasswordTextView
                android:id="@+id/tv_key"
                app:dot_color="@color/colorPrimary"
                app:text_size="@dimen/font_larger"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height_normal"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_progress"
            android:alpha="0"
            tools:alpha="1"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="@string/hint_searching"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.leaves.app.shareme.ui.widget.dialpad.colorfulanimview.ColorfulAnimView
                android:id="@+id/view_anim"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="100dp"/>
            <Button
                android:id="@+id/bt_cancel"
                android:background="@drawable/bg_button_roundrect_accent"
                android:textColor="@color/colorPrimary"
                android:text="@string/cancel"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

