<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.leaves.app.shareme.ui.fragment.MusicFragment">
    <FrameLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height_normal"/>
        <TextView
            android:id="@+id/tv_hint"
            tools:text="@string/hint_host"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/layout_info"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_cover"
            tools:src="@drawable/bg_piano"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/cover_image_size"
            android:layout_height="@dimen/cover_image_size"/>
        <TextView
            android:id="@+id/tv_title"
            tools:text="All We Know"
            android:layout_margin="@dimen/spacing_normal"
            android:textSize="@dimen/font_large"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_author"
            tools:text="The Chainsmokers/Phoebe Ryan"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layout_info"
        android:layout_marginBottom="@dimen/spacing_small"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bt_prev"
            android:background="@drawable/bg_ripple_dark"
            android:clickable="true"
            android:src="@drawable/ic_move_to_prev"
            android:layout_width="@dimen/image_normal"
            android:layout_height="@dimen/image_normal"/>
        <ImageView
            android:id="@+id/bt_play_pause"
            android:layout_margin="@dimen/spacing_large"
            android:clickable="true"
            android:background="@drawable/bg_ripple"
            android:padding="@dimen/spacing_tiny"
            android:src="@drawable/ic_select_play_pause"
            android:layout_width="@dimen/image_more_large"
            android:layout_height="@dimen/image_more_large"/>
        <ImageView
            android:id="@+id/bt_next"
            android:background="@drawable/bg_ripple_dark"
            android:clickable="true"
            android:src="@drawable/ic_move_to_next"
            android:layout_width="@dimen/image_normal"
            android:layout_height="@dimen/image_normal"/>
    </LinearLayout>
</RelativeLayout>
